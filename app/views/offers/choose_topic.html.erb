<div class="container">
  <h1 class="text-center">Bitte wähle das Oberthema deines Angebots aus</h1>
  <br>
  <div class="topic-card-container">
    <% @topics.each do |topic| %>
      <div class="topic-card">
          <div class="topic-card-box">
            <div class="topic-card-box-content">
              <h2><%= topic.id %></h2>
              <h3><%= topic.title %></h3>
              <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Labore, totam velit? Iure nemo labore inventore?</p>
              <a href="/topics/<%= topic.id %>/offers/new">Auswählen</a>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
