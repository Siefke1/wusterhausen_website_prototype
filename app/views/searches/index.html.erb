<%# SEARCH FORM %>
<div class="entdecken-header">
  <h3 class="sprechblase_oben">Kein Bock dich durch zu klicken? <br> Suche hier nach einem Stichwort oder schau was es in Deiner Nähe gibt 🧐</h3>
</div>
<div class="search-container d-flex justify-content-center">
  <%= form_tag search_path, method: :get do %>
    <div class="d-flex">
      <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Stichwort oder PLZ"
      %>
      <%= submit_tag "Search", class: "btn btn-dark", id: "search-button" %>
     <%# <button type="submit" form="search" value="Submit" class="shiny_black">Submit</button> %>
    </div>
  <% end %>
</div>


<%# SEARCH RESULTS %>
<% if params[:query] %>
  <p class="search-result-message-success">Die Suche nach "<%= params[:query] %>" ergab folgende Treffer 🎉</p>
<% end %>
<div class="offer-cards-container">
  <% @offers.each do |offer| %>
    <div class="offer-card-container">
    <% if offer.photo.attached? %>
      <div class="offer-card-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path offer.photo.key %>')">
        <div class="offer-card-heading">
          <h4><%= offer.title %></h4>
          <p><%= offer.user.email %> / <%= offer.full_address %></p>
          <%= button_to "Klick!", offer_path(offer), class: "btn btn-dark" %>
        </div>
      </div>
    <% else %>
      <div class="offer-card-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1645976417695-e76bf772b1bd?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2071&q=80')">
        <div class="offer-card-heading">
          <h4><%= offer.title %></h4>
          <p><%= offer.user.email %> / <%= offer.full_address %></p>
          <%= link_to offer_path(offer) do %>
            <div class="offer-card-button"><h3>C L I C K</h3></div>
          <% end %>
        </div>
      </div>
    <% end %>
      <div class="offer-card-text">
        <p><%= offer.description %></p>
      </div>
    </div>
  <% end %>
</div>

