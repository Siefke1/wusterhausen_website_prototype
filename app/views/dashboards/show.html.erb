
<%= link_to "CREATE A NEW OFFER", choose_topic_path %>
<%# ACTIVE OFFERS %>
<h2>Active Offers</h2>
<div class="offer-cards-container" style="overflow:scroll; height:500px; border: 1px inset black; padding: 10px;">
  <% @offers.where(status: "active").each do |offer| %>
    <div class="offer-card-container">
    <% if offer.photo.attached? %>
      <div class="offer-card-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path offer.photo.key %>')">
        <div class="offer-card-heading">
          <h4><%= offer.title %></h4>
          <p><%= offer.user.email %> / <%= offer.full_address %></p>
          <%= button_to "Klick!", offer_path(offer), class: "btn btn-dark" %>
        </div>
      </div>
    <% else %>
      <div class="offer-card-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1645976417695-e76bf772b1bd?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2071&q=80')">
        <div class="offer-card-heading">
          <h4><%= offer.title %></h4>
          <p><%= offer.user.email %> / <%= offer.full_address %></p>
          <%= link_to offer_path(offer) do %>
            <div class="offer-card-button"><h3>C L I C K</h3></div>
          <% end %>
        </div>
      </div>
    <% end %>
      <div class="offer-card-text">
        <p><%= offer.description %></p>
      </div>
    </div>
  <% end %>
</div>
<div class="puffer"></div>
